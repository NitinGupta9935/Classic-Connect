<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.LoginActivity">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_marginTop="20dp"
              android:textStyle="bold"
              android:textSize="20dp"
              android:id="@+id/phone_number_text"
              android:textColor="#7d9a96"
    android:text="Verify your phone number"/>

    <View android:layout_width="match_parent"
          android:layout_height="4dp"
          android:background="#7d9a96"
          android:outlineSpotShadowColor="#000000"
          android:layout_marginTop="20dp"
          android:layout_marginStart="60dp"
          android:layout_marginEnd="60dp"
    />

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:layout_marginStart="60dp"
                  android:layout_marginEnd="60dp"
                  android:id="@+id/phone_number"
                  android:inputType="number"
                  android:hint="Enter Phone Number"
        />

    <com.google.android.material.button.MaterialButton android:layout_width="80dp"
                                                       android:text="Next"
                                                       android:backgroundTint="@android:color/darker_gray"
                                                       android:layout_marginTop="20dp"
                                                       android:layout_gravity="center"
                                                       android:id="@+id/login"
                                                       android:layout_height="wrap_content"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:layout_marginStart="20dp"
              android:textColor="#8385E3"
              android:textStyle="bold"
              android:id="@+id/reset_mobile_number"
              android:visibility="gone"

    android:text="Click here for change mobile number"/>

</LinearLayout>