<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView android:layout_gravity="left"
                                                       android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       android:layout_margin="10dp"
                                                       app:cardCornerRadius="10dp">

        <LinearLayout android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <TextView android:textSize="15dp"
                      android:textColor="#000000"
                      android:gravity="center_vertical"
                      android:id="@+id/receiveMessage"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="7dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginRight="2dp"
                      android:layout_marginBottom="7dp"
                      android:text="Hello"
                      android:textIsSelectable="true"/>

            <TextView android:textSize="10dp"
                      android:layout_gravity="right|bottom"
                      android:id="@+id/receive_message_time"
                      android:paddingLeft="0dp"
                      android:paddingTop="10dp"
                      android:paddingRight="7dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="3:45 pm"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>