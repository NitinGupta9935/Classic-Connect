    <com.google.android.material.card.MaterialCardView android:layout_gravity="right"
                                                       android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       android:layout_margin="10dp"
                                                       android:backgroundTint="#dcf8c7"
                                                       app:cardCornerRadius="10dp">
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            <TextView android:textSize="15dp"
                      android:textColor="#000000"
                      android:gravity="left"
                      android:id="@+id/sentMessage"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="7dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginRight="2dp"
                      android:layout_marginBottom="7dp"
                      android:text="Hello world"
                      android:textIsSelectable="true"/>
            <TextView android:textSize="10dp"
                      android:layout_gravity="right|bottom"
                      android:id="@+id/send_message_time"
                      android:paddingLeft="0dp"
                      android:paddingTop="10dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="2:35 pm"/>
            <ImageView android:layout_gravity="right|bottom"
                       android:id="@+id/send_message_singe_check"
                       android:visibility="visible"
                       android:layout_width="15dp"
                       android:layout_height="12dp"
                       android:layout_marginRight="7dp"
                       android:src="@drawable/single_check"/>
            <ImageView android:layout_gravity="right|bottom"
                       android:id="@+id/send_message_double_check"
                       android:visibility="gone"
                       android:layout_width="15dp"
                       android:layout_height="12dp"
                       android:layout_marginRight="7dp"
                       android:src="@drawable/double_check"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>